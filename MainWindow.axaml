<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="NetworkMonitor.MainWindow"
        Title="网络速度监视器 - 跨平台版"
        Width="500" Height="400"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5"
        CanResize="False">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <TextBlock Text="🌐" FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <StackPanel>
                <TextBlock Text="网络速度监视器" 
                           FontSize="24" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                <TextBlock Name="PlatformInfoText" 
                           Text="检测平台中..." 
                           FontSize="12" 
                           Foreground="Gray"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
        
        <!-- 网络接口选择 -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                Padding="15"
                Margin="0,0,0,15"
                BoxShadow="0 2 4 0 #00000020">
            <StackPanel>
                <TextBlock Text="🔧 网络接口选择" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ComboBox Name="InterfaceComboBox" 
                              Grid.Column="0"
                              PlaceholderText="选择网络接口..."
                              SelectionChanged="OnInterfaceSelectionChanged"/>
                    
                    <Button Name="RefreshButton" 
                            Grid.Column="2"
                            Content="🔄 刷新"
                            Padding="10,5"
                            Click="OnRefreshButtonClick"/>
                </Grid>
                
                <TextBlock Name="InterfaceDetailText" 
                           Text="请选择网络接口开始监控"
                           FontSize="12" 
                           Foreground="#666"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- 速度显示区域 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 下载速度 -->
            <Border Grid.Row="0" Grid.Column="0" 
                    Background="#4CAF50" 
                    CornerRadius="12" 
                    Padding="15"
                    BoxShadow="0 4 8 0 #4CAF5040">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                        <TextBlock Text="⬇️" FontSize="18" Margin="0,0,5,0"/>
                        <TextBlock Text="下载速度" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                    <TextBlock Name="DownloadSpeedText" 
                               Text="0.00 KB/s" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- 上传速度 -->
            <Border Grid.Row="0" Grid.Column="2" 
                    Background="#2196F3" 
                    CornerRadius="12" 
                    Padding="15"
                    BoxShadow="0 4 8 0 #2196F340">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                        <TextBlock Text="⬆️" FontSize="18" Margin="0,0,5,0"/>
                        <TextBlock Text="上传速度" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                    <TextBlock Name="UploadSpeedText" 
                               Text="0.00 KB/s" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- 总流量 -->
            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                    Background="#FF9800" 
                    CornerRadius="12" 
                    Padding="15"
                    BoxShadow="0 4 8 0 #FF980040">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                        <TextBlock Text="📊" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="总流量 (本次运行)" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                    <TextBlock Name="TotalDataText" 
                               Text="下载: 0 MB | 上传: 0 MB" 
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- 底部状态信息 -->
        <StackPanel Grid.Row="3" Margin="0,15,0,0">
            <Border Background="White" 
                    CornerRadius="8" 
                    Padding="10"
                    BoxShadow="0 2 4 0 #00000020">
                <StackPanel>
                    <TextBlock Name="LastUpdateText" 
                               Text="最后更新: --:--:--" 
                               FontSize="12" 
                               Foreground="#666"
                               HorizontalAlignment="Center"/>
                    <TextBlock Name="StatusText" 
                               Text="状态: 请选择网络接口" 
                               FontSize="12" 
                               Foreground="#666"
                               HorizontalAlignment="Center"
                               Margin="0,3,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>